{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "module": "es2015",
    "baseUrl": "./src",
    "paths": {
      "typeorm": ["../../server/node_modules/typeorm/typeorm-model-shim.js"],
      "@shared/*": ["app/shared/*"],
      "@models/*": ["app/models/*"],
      "@entity/*": ["app/entity/*"]
    },
    "types": [
      "node"
    ]
  }
}
